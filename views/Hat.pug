extends layout

block content
  - let create = `dispatch(\"Hat/create\")`
  button.btn(class="btn-primary m1-1", onclick=create) Create
  h1= title
  p Welcome to the Hat pug
  div(class="container-fluid")
        div(class="row")
            -
                let Hat = results
                
  div(class="container-fluid") 
    div(class="row  m-1") 
      each item in Hat 
       - let destination = `dispatch(\"/Hat/update?id=${item._id}\")` 
       - let detail=`dispatch(\"/Hat/detail?id=${item._id}\")`
       - let de=`dispatch(\"/Hat/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Hat #{item.brand}(#{item.material}) is #{item.cost}
            button.btn( class="btn-primary ml-1", onclick= destination) Update
            button.btn( class="btn-secondary ml-2", onclick=detail ) Get Detail page
            button.btn( class="btn-warning ml-2", onclick=de ) Delete
        script.                
            function buy(itemNo)
            {
                  alert(`you purchased Item ${itemNo+1}`)
            }
        script. 
          function dispatch(path)
          { 
              window.location.href=path 
          } 
