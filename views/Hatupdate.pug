extends layout

block content
  h1= title

  if (toShow == null)
    h2 No instance to delete
  else
    - let Hatid = toShow._id
    - let Hatbrand = toShow.brand
    - let Hatmaterial = toShow.material
    - let Hatcost = toShow.cost
  
    div.row(class='mb-2')
      div.mr-1 ID is
      div #{Hatid}
    - let actionid = "/resource/Hat/" + Hatid
    form(id='HatForm', action= actionid, method="PUT")
      div.form-group
          label.HatAttr(for='brand') Hat brand
          input#brand(type='text', name='brand', value= Hatbrand )
      div.form-group
          label.HatAttr(for='material') Hat material
          input#material(type='text', name='material', value= Hatmaterial )
      div.form-group
          label.HatAttr(for='cost') Hat cost
          input#cost(type='number', name='cost', value= Hatcost )
      input(type="submit")

  script.
    document.forms['HatForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      console.log(event.target)
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Update succeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Update failed " + error )
      });
    });
